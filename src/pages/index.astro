---
import { App } from '../App';
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, maximum-scale=1.0, user-scalable=no" />
    <title>节拍器 - 支持录音的在线节拍器</title>
    
    <!-- PWA 相关 -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="节拍器" />
    <meta name="application-name" content="节拍器" />
    
    <!-- SEO -->
    <meta name="description" content="一个支持录音的在线节拍器，可调节速度并保存录音。支持 PWA 安装，可离线使用。" />
    <meta name="theme-color" content="#007AFF" />
    <meta name="color-scheme" content="light" />
    
    <!-- favicon -->
    <link rel="icon" href="/icons/icon.png" />
    <link rel="mask-icon" href="/icons/icon.png" color="#007AFF" />
    
    <!-- iOS 图标 -->
    <link rel="apple-touch-icon" href="/icons/icon.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/icons/icon.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="/icons/icon.png" />
    
    <!-- 启动画面 -->
    <link rel="apple-touch-startup-image" href="/icons/splash.png" />
  </head>
  <body>
    <div id="root">
      <App client:load />
    </div>
    
    <script>
      // 注册 service worker
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('ServiceWorker 注册成功:', registration.scope);
            })
            .catch(error => {
              console.log('ServiceWorker 注册失败:', error);
            });
        });
      }
    </script>
  </body>
</html> 